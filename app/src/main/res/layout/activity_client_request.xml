<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aseelzene.mycustomerservice.ClientRequest"
    android:background="#c2e9da">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:baselineAligned="false"
        android:orientation="vertical">

        <Button
            android:layout_width="307dp"
            android:layout_height="130dp"
            android:text="@string/Customer"
            android:id="@+id/btnCustomer"
            android:layout_gravity="center_horizontal"
            android:textColor="#0c0d0c"
            android:background="#54d04d" />

        <Button
            android:layout_width="307dp"
            android:layout_height="134dp"
            android:text="@string/Server"
            android:id="@+id/btnServer"
            android:background="#ff8a42"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:hint="Email"
            android:background="#54d04d" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassw"
            android:hint="Password"
            android:background="#ff8a42"
            android:autoText="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c2e9da">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Signin"
                android:id="@+id/btnSignin"
                android:background="#54d04d"
                android:layout_weight="1"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:id="@+id/btnSignUp"
                android:background="#ff8a42"
                android:layout_weight="1"
                android:layout_gravity="bottom" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
